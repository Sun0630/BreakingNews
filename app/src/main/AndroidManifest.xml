<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sx.breakingnews"
    >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".InitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|uiMode|screenSize"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity> <!-- 圆形 -->
        <activity-alias
            android:name=".SplashActivity_circle"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:targetActivity=".SplashActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias> <!-- 矩形 -->
        <activity-alias
            android:name=".SplashActivity_rect"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:targetActivity=".SplashActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|uiMode|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".module.news.channel.NewsChannelActivity">
        </activity>
        <activity
            android:name=".module.news.content.NewsContentActivity"
            android:configChanges="uiMode|screenSize|orientation"
            android:label="@string/title_news_content"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            >
        </activity>
    </application>

</manifest>